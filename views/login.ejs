<!DOCTYPE html>
<html>
  <head>
    <title>Chatroom</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="/javascripts/login.js"></script>
  </head>

  <body>

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.7&appId=646805758811260";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div id='loginOptionsBox'>
        <h1 class='center'><center>How others will see you:</center></h1>

        <form id='loginForm' class='floatLeft'>
            <h1>Local nickname</h1>
            <input type='text' id='nicknameField'  placeholder='Nickname' autocomplete='off' />
            <span id='validateNickname' style='color:red;'></span>
        </form>

        <h1 class='floatLeft'>or</h1>

        <div class="fb-login-button floatLeft" data-max-rows="1" data-size="large" data-show-faces="true" data-auto-logout-link="true"></div>

        <a href='/auth/facebook' class="floatLeft">Continue with Facebook</a>

    </div>

  </body>
</html>
